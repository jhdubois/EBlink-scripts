/////////////////////////////////////////////////////
//
//   Memory map template of this device(s)
//   Avoid unnecessary spaces. (we omit the DOCTYPE, GDB isn't using it. )
//
const mem_template = @@"
<?xml version=\"1.0\"?>
<memory-map>
 <memory type=\"rom\" start=\"0x1C000000\" length=\"0x8000\"/>
 <memory type=\"ram\" start=\"0x1FFF8000\" length=\"0x%x\"/>
 <memory type=\"flash\" start=\"0x00000000\" length=\"0x%x\">
  <property name=\"blocksize\">0x%x</property>
  <property name=\"secstart\">0</property>
 </memory>
 <memory type=\"ram\" start=\"0x40000000\" length=\"0x180000\"/>
 <memory type=\"ram\" start=\"0x44000000\" length=\"0x1600000\"/>
 <memory type=\"ram\" start=\"0xE0000000\" length=\"0xC00000\"/>
 <memory type=\"ram\" start=\"0xF0000000\" length=\"0x10000\"/>
 <memory type=\"ram\" start=\"0xF1100000\" length=\"0x100000\"/>
 <memory type=\"ram\" start=\"0xF8000000\" length=\"0x100000\"/>
</memory-map>"

ram_size <- 0
flash_size <- 0
page_size <- 1024

// Device Type
KINETISLCONFIG <- [
	[0x00000000, "32L3A"],
	[0x20000000, "32L2A"],
	[0x40000000, "32L2B"],
]

KINETISKCONFIG <- [
	[0x0, "0"],
	[0x1, "1"],
	[0x2, "2"],
	[0x3, "3"],
	[0x4, "4"],
	[0x6, "6"],
	[0x7, "7"],
	[0x8, "8"],
]

// RAM size
RAMCONFIG <- [
	[0x00050000, 16*1024],
	[0x00060000, 32*1024],
	[0x00080000, 96*1024],
	[0x00090000, 128*1024],
]

// FLASH size
FLASHCONFIG <- [
    [0x03000000, 32*1024],
	[0x05000000, 64*1024],
	[0x06000000, 128*1024],
	[0x07000000, 128*1024],
	[0x09000000, 256*1024],
	[0x0B000000, 512*1024],
	[0x0D000000, 1024*1024],
	[0x0F000000, 128*1024],
]

const SIM_FCFG1     0x4007504C	// Flash Configuration Register 1
const SIM_FCFG1_L2B 0x4004804C  // Flash Configuration Register 1 on K32L2B chips

/////////////////////////////////////////////////////
//
//  Entry point of this script called by parent script
//
//      Remark: The intrfApi is a global object from parent
//
function kinetis_device()
{
    local deviceStr = ""

	// Read device type
	if (deviceId < 0x407F) {

		if (deviceId & 0x10) deviceStr = "MK20"
		else deviceStr = "MK10"

		// Read RAM size
		if ((deviceId & 0xFF) == 0x02) ram_size = 0x2000
		else ram_size = 0x4000

		// Read FLASH size
		_n_throw(intrfApi.readMem32(SIM_FCFG1_L2B))
	}
	else {
	if ((deviceId & 0x00F00000) == 0x0) {
		for (local i=0;i<KINETISKCONFIG.len();i++) {
			if (((deviceId & 0xF0000000) >> 28) == KINETISKCONFIG[i][0]) {
					deviceStr = "K" + KINETISKCONFIG[i][1]
				for (local j=0;i<KINETISKCONFIG.len();i++) {
					if (((deviceId & 0x0F000000) >> 24) == KINETISKCONFIG[i][0]) {
							deviceStr += KINETISKCONFIG[i][1]
							break
					}
				}
				break
			}
		}
	}
	else {
		for (local i=0;i<KINETISLCONFIG.len();i++) {
			if ((deviceId & 0xF0000000) == KINETISLCONFIG[i][0]) {
					deviceStr = "K" + KINETISLCONFIG[i][1]
				break
			}
		}
	}
	if (deviceStr == "") throw ERROR_NOT_FOUND

	// Read RAM size
	for (local i=0;i<RAMCONFIG.len();i++) {
		if ((deviceId & 0x000F0000) == RAMCONFIG[i][0]) {
			ram_size = RAMCONFIG[i][1]
				break
		}
	}
	
	// Read FLASH size
		if (deviceStr == "K32L2B") _n_throw(intrfApi.readMem32(SIM_FCFG1_L2B))
	else _n_throw(intrfApi.readMem32(SIM_FCFG1))
		
		// Set FLASH sector size (if not default: 1024)
		
		if (deviceStr == "K32L2A") page_size = 2048
		
	}
	
	if (ram_size == 0) throw ERROR_NOT_FOUND

	for (local i=0;i<FLASHCONFIG.len();i++) {
		if ((intrfApi.value32 & 0x0F000000) == FLASHCONFIG[i][0]) flash_size = FLASHCONFIG[i][1]
	}
	
	if (flash_size == 0) throw ERROR_NOT_FOUND
	
    // Inform user of the device found
    printf("NXP Kinetis family : %s\n", deviceStr)

    // Inform the user
    printf("Detected FLASH : 0x%X\nConfigured RAM : 0x%X\n", flash_size, ram_size)

    // The user specified the size of flash memory
    if (isScriptObject("FLASH_SIZE") && FLASH_SIZE>0) {
      flash_size = (FLASH_SIZE & 0xffff) * 1024
      printf("CLI set  FLASH : 0x%X\n", flash_size)
    }

    // The user specified the size of ram memory
    if (isScriptObject("RAM_SIZE") && RAM_SIZE>0) {
      ram_size = (RAM_SIZE & 0xffff) * 1024
      printf("CLI set    RAM : 0x%X\n", ram_size)
    }

	DeviceAPI().memmap( format( mem_template,  ram_size,flash_size,page_size) )

    // Flash loader script
    require("nxp/flash/kinetis.script")
}

